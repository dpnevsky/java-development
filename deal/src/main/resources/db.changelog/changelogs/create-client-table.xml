<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">

    <changeSet id="create-client-table" author="dpnevsky@gmail.com">
        <createTable tableName="client">
            <column name="client_id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="middle_name" type="VARCHAR(255)"/>
            <column name="birth_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="gender" type="VARCHAR(20)"/>
            <column name="marital_status" type="VARCHAR(50)"/>
            <column name="dependent_amount" type="INTEGER"/>
            <column name="passport_id" type="JSON"/>
            <column name="employment_id" type="JSON"/>
            <column name="account_number" type="VARCHAR(255)"/>
        </createTable>

<!--        <addPrimaryKey columnNames="client_id" tableName="client" constraintName="pk_client"/>-->

        <rollback>
            <dropTable tableName="client"/>
        </rollback>

        <comment>
            This change set creates the client table with rollback for safe removal.
        </comment>
    </changeSet>
</databaseChangeLog>
